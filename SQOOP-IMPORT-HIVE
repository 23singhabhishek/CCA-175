sqoop import  \
--m 5 \
--connect 'jdbc:mysql://quickstart.cloudera:3306/retail_db' \
--username retail_dba \
--password cloudera \
--hive-import  \
--hive-overwrite \
--create-hive-table  \
--table products  \
--z  \
--compression-codec snappy \
--outdir java_files 


